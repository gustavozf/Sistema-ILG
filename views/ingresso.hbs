  <form action="/ingresso/inserirIngres" method="post">
      <a class="btn" data-toggle="modal" href="#myModal" >Launch Modal</a>
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" id="inputName" placeholder="Nome" name="name">
    </div>
    <div class="form-group">
      <label >Sobrenome</label>
      <input type="text" class="form-control" id="inputSurname" placeholder="Sobrenome" name="sobrenome">
    </div>

    <div class="form-group">
      <label>RG</label>
      <input type="text" class="form-control" id="inputRG" placeholder="ex.: 145675439" name="rg">
    </div>

    <div class="form-group">
      <label>CPF</label>
      <input type="text" class="form-control" id="inputCPF" placeholder="ex.: 26456711384" name="cpf">
    </div>

    <div>
      <label>Escolha o sexo: </label>
      <select class="form-control" id = "sexo" name="sexo">
        <option value = 'F' selected = "selected">Feminino</option>
        <option value = 'M'>Masculino</option>
        <option value = 'O'>Outro</option>
      </select>
    </div>

    <div class="form-group">
      <label>Data de Nascimento</label>
      <input type="text" class="form-control" id="datNas" placeholder="dd/mm/aaaa" name="data_nasc">
    </div>

    <div class="form-group">
      <label>Telefone</label>
      <input type="text" class="form-control" id="inputTele" placeholder="ex.: 04499913456" name="telefone">
    </div>

    <div class="form-group">
      <label>Rua</label>
      <input type="text" class="form-control" id="inputRua" placeholder="ex.: Rua Sao Jose, Jd Paulista" name="logradouro">
    </div>

    <div class="form-group">
      <label>Número</label>
      <input type="text" class="form-control" id="inputNum" placeholder="ex.: 243" name="num">
    </div>

    <div class="form-group">
      <label>Complemento</label>
      <input type="text" class="form-control" id="inputComp" placeholder="ex.: Ao lado da Praça" name="complemento">
    </div>

    <div class="form-group">
      <label>CEP</label>
      <input type="text" class="form-control" id="inputCEP" placeholder="XXXXX-XXX" name="cep">
    </div>

    <div>
      <table class="table table-striped">
        <thead>
          <tr>
              <th>Curso</th>
              <th>Dias</th>
              <th>Horário</th>
              <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
              <td class="filterable-cell">Inglês</td>
              <td class="filterable-cell">Seg/Qua</td>
              <td class="filterable-cell">19h40</td>
              <td >
                <div class="checkbox">
                  <label>
                    <input type="checkbox">
                  </label>
                </div>
              </td>
          </tr>
          <tr>
              <td class="filterable-cell">Inglês</td>
              <td class="filterable-cell">Ter/Qui</td>
              <td class="filterable-cell">13h30</td>
              <td>
                <div class="checkbox">
                  <label>
                    <input type="checkbox">
                  </label>
                </div>
              </td>
          </tr>

          <tr>
              <td class="filterable-cell">Francês</td>
              <td class="filterable-cell">Ter/Qui</td>
              <td class="filterable-cell">15h30</td>
              <td>
                <div class="checkbox">
                  <label>
                    <input type="checkbox">
                  </label>
                </div>
              </td>
          </tr>
          <tr>
              <td class="filterable-cell">Italiano</td>
              <td class="filterable-cell">Qua/Sex</td>
              <td class="filterable-cell">17h30</td>
              <td>
                <div class="checkbox">
                  <label>
                    <input type="checkbox">
                  </label>
                </div>
              </td>
          </tr>
           <tr>
              <td class="filterable-cell">Espanhol</td>
              <td class="filterable-cell">Escort</td>
              <td class="filterable-cell">15h30</td>
              <td>
                <div class="checkbox">
                  <label>
                    <input type="checkbox">
                  </label>
                </div>
              </td>
          </tr>
          </tbody>

      </table>
    </div>

    <div>
      <label>Posição quanto à UEM</label>
      <select class="form-control" id = "posicUEM" onchange="disableButton()" name="pos_uem">
        <optgroup label = "Nível 0">
        <option value = 0 selected = "selected">Não Vinculado à UEM</option>
      </optgroup>

      <optgroup label = "Nível 1">
        <option value = 9>Acadêmico da UEM não vinculado a projeto ou programa</option>
        <option value = 10>Servidor da UEM não matriculado em curso de pós-graduação</option>
        <option value = 11>Filho de servidor da UEM</option>
        <option value = 12>Servidor da UEM aposentado</option>
        <option value = 13>Dependente de servidor da UEM aposentado</option>
      </optgroup>

      <optgroup label = "Nível 2">
        <option value = 1>Servidor da UEM matriculado em curso de pós-graduação</option>
        <option value = 2>Acadêmico de pós-graduação STRICTU SENSU na UEM</option>
        <option value = 3>Acadêmico de graduação participante de PET</option>
        <option value = 4>Acadêmico de graduação participante de iniciação científica</option>
        <option value = 5>Acadêmico de graduação participante de projeto de pesquisa</option>
        <option value = 6>Acadêmico de graduação participante de projeto de ensino</option>
        <option value = 7>Acadêmico de graduação participante de projeto de extensão</option>
        <option value = 8>Participantes de todos os programas de bolsas oferecidos pela UEM</option>
      </optgroup>
    </select>
    <p class="help-block">Para mais informações sobre descontos e comprovantes necessários,
      <a href="documents/Descontos_ILG.pdf" target="_blank">clique aqui!</a>
    </p>
    </div>

