  <form action="/admin/turma/insereTur" method="post">
    <h3>Inserir Nova Turma: </h3>
    <div class="form-group">
        <label >Código do Curso</label>
        <input type="text" class="form-control" placeholder="Número do curso ao qual pertence" name="cod_cur">
    </div>
    <div class="form-group">
      <label >Horário</label>
      <input type="text" class="form-control" placeholder="ex: 13:30" name="horario">
    </div>

      <div class="form-group">
          <label >Descrição</label>
          <input type="text" class="form-control" placeholder="ex: Inglês - Terça/Quinta - 13:30" name="descricao">
      </div>

    <div class="form-group">
      <label>Professor</label>
      <input type="text" class="form-control" placeholder="Nome do Professor" name="prof">
    </div>

      <div class="form-group">
          <label >CPF do Professor</label>
          <input type="text" class="form-control" placeholder="ex: 12345678912" name="cpf_prof">
      </div>

    <div class="form-group">
      <label>Número de Vagas</label>
      <input type="text" class="form-control" placeholder="ex.: 22" name="num">
    </div>

    <div class="form-group">
      <label>Código da Turma</label>
      <input type="text" class="form-control" placeholder="ex.: 2211" name="cod_turma">
    </div>

      <div>
          <label>Escolha a disponibilidade: </label>
          <select class="form-control" id = "disp" name="disp">
              <option value = 1 selected = "selected">Disponível para inscrição</option>
              <option value = 0 >Indiponível para inscrição</option>
          </select>
      </div>
      </br>

    <button type="submit" class="btn btn-primary btn-block">Inserir Turma</button>
  </form>


