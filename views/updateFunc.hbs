  <form action="/admin/updateFunc" method="post">
    <h3>Escreva o CPF a ser atualizado: </h3>
    <div class="form-group">
      <label>CPF</label>
      <input type="text" class="form-control" id="inputCPF" placeholder="ex.: 26456711384" name="cpf">
    </div>
    <h3>Escreva as novas informações: </h3>
    <div class="form-group">
        <label >Nome</label>
        <input type="text" class="form-control" id="inputName" placeholder="Nome" name="nome">
    </div>
    <div class="form-group">
      <label >Sobrenome</label>
      <input type="text" class="form-control" id="inputSurname" placeholder="Sobrenome" name="sobrenome">
    </div>

    <div class="form-group">
      <label>RG</label>
      <input type="text" class="form-control" id="inputRG" placeholder="ex.: 145675439" name="rg">
    </div>

    <div>
      <label>Escolha o sexo: </label>
      <select class="form-control" id = "sexo" name="sexo">
        <option value = 'F' selected = "selected">Feminino</option>
        <option value = 'M' selected = "selected">Masculino</option>
        <option value = 'O' selected = "selected">Outro</option>
      </select>
    </div>

    <div class="form-group">
      <label>Data de Nascimento</label>
      <input type="text" class="form-control" id="datNas" placeholder="dd/mm/aaaa" name="data_nasc">
    </div>

    <div class="form-group">
      <label>Telefone</label>
      <input type="text" class="form-control" id="inputTele" placeholder="ex.: 04499913456" name="telefone">
    </div>

      <div>
          <label>Escolha o tipo: </label>
          <select class="form-control" id = "tipo_func" name="tipo_func">
              <option value = 1 selected = "selected">Secretaria</option>
              <option value = 2>Docente</option>
          </select>
      </div>
      <br>
    <button type="submit" class="btn btn-primary btn-block">Atualizar</button>
  </form>


